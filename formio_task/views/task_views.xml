<odoo>
    <record id="project_task_view_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="action"
                    name="%(formio.action_formio_form)d"
                    context="{'search_default_project_task_id': id, 'search_default_res_model_id': formio_this_model_id, 'default_res_model_id': formio_this_model_id, 'default_project_task_id': id}"
                    groups="formio.group_formio_user"
                    class="oe_stat_button"
                    icon="fa-file-text">
                    <field name="formio_forms_count" widget="statinfo" string="Forms"/>
                </button>
            </div>
            <xpath expr="//form/sheet/notebook" position="after">
                <field name="formio_this_model_id" invisible="1"/>
            </xpath>
            <!-- <xpath expr="//notebook/page/field[@name='date_last_stage_update']" position="after">
                <field name="associate_form_template"/>
            </xpath> -->
            <field name='date_last_stage_update' position="after">
                <field name="associated_form_template" domain="[('res_model','=','project.task')]"/>
            </field>
        </field>
    </record>
</odoo>
