<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="india_mart.list">
      <field name="name">india_mart list</field>
      <field name="model">im.leads</field>
      <field name="arch" type="xml">
        <tree>
          <field name="query_id" string="QueryID"/>
          <field name="glusr_usr_companyname" optional="hide" string="Organisation"/>
          <field name="date1" optional="hide" />
          <field name="datetime1" optional="hide" />
          <field name="sender_name" />
          <field name="mobile" />
          <field name="email" />
          <field name="state" />
          <field name="city"/>
          <field name="subject" />
          <field name="product_name" />
          <field name="message" optional="hide"/>
          <field name="street" />
          <field name="product_details"/>
          <field name="email2" string="Alternate Email" optional="hide" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="india_mart.action_window1">
      <field name="name">India Mart Leads</field>
      <field name="res_model">im.leads</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[]</field>
      <field name="context">{}</field>
    </record>


