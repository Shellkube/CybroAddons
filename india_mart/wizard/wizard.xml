<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="im_lead_wizard" model="ir.ui.view">
            <field name="name">im.wizard.form</field>
            <field name="model">im.lead.wizard</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Import Indiamart Leads">
                    <group>
                        <group>
                            <field name="st_date"/>
                            <field name="end_date"/>
                        </group>
                        <span>Note: If one or both dates left blank then leads from yesterday till today will be imported.</span>
                    </group>
                    <footer>
                        <button name="import_indiamart_leads" string="Import" type="object" style="background-color:#7C7BAD;color:#FFFFFF"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>